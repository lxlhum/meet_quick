<script type="text/javascript">
    $(function () {
        {{#if totalPages}}
        var totalPage = {{totalPages}};
    {{else}}
    var totalPage = 1;
    {{/if}}
            var totalRecords = 500;

            kkpager.generPageHtml({
                pno: {{pno}},
        total: totalPage,
            //总数据条数
            totalRecords : totalRecords,
                mode : 'click',
                    click : function(n) {

                        this.selectPage(n);
                        window.location = "/users/customersList?page=" + n;
                        return false;
                    }
    });
        });

